# Headers para archivos WebAssembly
/assets/modelos/*.wasm
  Content-Type: application/wasm
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Access-Control-Allow-Origin: *
  Cache-Control: no-cache, no-store, must-revalidate

# Headers para archivos JavaScript
/assets/modelos/*.js
  Content-Type: application/javascript
  Access-Control-Allow-Origin: *

# Headers para archivos JSON
/assets/modelos/*.json
  Content-Type: application/json
  Access-Control-Allow-Origin: *

# Headers para archivos .task
/assets/modelos/*.task
  Content-Type: application/octet-stream
  Access-Control-Allow-Origin: *

# Headers para archivos .shard
/assets/modelos/*-shard*
  Content-Type: application/octet-stream
  Access-Control-Allow-Origin: *

# Headers generales para todos los archivos
/*
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type 