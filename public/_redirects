# Headers para archivos WebAssembly - invalidación agresiva de caché
/assets/modelos/*.wasm
  Content-Type: application/wasm
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: Thu, 01 Jan 1970 00:00:00 GMT
  Surrogate-Control: no-store
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Access-Control-Allow-Origin: *

# Headers para archivos JavaScript
/assets/modelos/*.js
  Content-Type: application/javascript
  Access-Control-Allow-Origin: *

# Headers para archivos JSON
/assets/modelos/*.json
  Content-Type: application/json
  Access-Control-Allow-Origin: *

# Headers para archivos .task
/assets/modelos/*.task
  Content-Type: application/octet-stream
  Access-Control-Allow-Origin: *

# Headers para archivos .shard
/assets/modelos/*-shard*
  Content-Type: application/octet-stream
  Access-Control-Allow-Origin: *

# Headers generales para todos los archivos
/*
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type 